@{
    ViewData["Title"] = "Новини";
}

@using VmSchool.Models
@using VmSchool.ViewModels
@model ArticlesViewModel

<div class="row" style="margin: 15pt">
    @foreach (var article in Model.Articles)
    {
        <div class="col-sm-6">
            <div class="card mb-4">
                <div class="card-body">
                    <p class="h4">@article.Title</p>
                    <p class="card-text">@article.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.href='@Url.Action("ShowArticle","Articles", new { id = article.Id })'">Детальніше...</button>
                        </div>
                        <small class="text-muted">@article.CreateDate.ToString("yyyy-MM-dd")</small>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
