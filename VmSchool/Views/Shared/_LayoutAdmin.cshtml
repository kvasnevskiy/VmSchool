<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - VmSchoolSite</title>
    <link rel="stylesheet" href="~/vendor.min.css" />
    <link rel="stylesheet" href="~/style.css" />
    <script src="~/vendor.min.js"></script>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("PreScripts", required: false)
</head>
<body>
    <!-- #region Main Menu -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-controller="Admin" asp-action="Index">Панель адміністратора</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Articles" asp-action="Management">Статті</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit" asp-controller="Account" asp-action="Logout">Вийти</button>
                </form>
            </div>
        </nav>
    </header>
    <!-- #endregion -->
    <!-- #region Content -->
    <main role="main" class="mt-auto">
        @RenderBody()
    </main>
    <!-- #endregion -->
    <!-- #region Footer -->
    <footer class="border-top footer text-muted">
        @Html.Raw(string.Format(@ViewData["Copyright"].ToString() ?? string.Empty, @DateTime.Now.ToString("yyyy")))
    </footer>
    <!-- #endregion -->
    <!-- #region PostScripts -->
    @*<script src="~/vendor.min.js"></script>*@
    @await RenderSectionAsync("PostScripts", required: false)
<!-- #endregion -->
</body>
</html>